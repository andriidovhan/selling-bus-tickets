<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>

<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
  <tr>
    <th>First_name</th>
    <th>Last_name</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user), :class => 'action edit' %></td>
        <td><%= link_to 'Destroy', delete_user_path(user), method: :destroy %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

