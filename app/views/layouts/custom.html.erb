<!DOCTYPE html>
<html>
  <head>
    <title>SellingBusTickets</title>
    <%= stylesheet_link_tag 'primary', media: 'all' %>

    <style>
      span.status { display: block; width: 10px; height: 10px;
      margin: 0.25em auto; padding: 0; border: 1px solid #000000; }
      span.status.true { background: green; color: green; }
      span.status.flase { background: red; color: red; }
    </style>
  </head>
  <body>

    <div id="header">
      <h1>Selling Bus Tickets System</h1>
    </div>

    <div id="main">
      <% if !flash[:notice].blank? %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <div id="navigation">
      <%= render(:partial => 'layouts/navigation') unless @disable_navigation %>
      </div>

      <div id="content">
        <%= yield %>
      </div>
    </div>

    <div id="footer">
      <p id="copyright">&copy; andrii.test-task.com</p>
    </div>
  </body>
</html>
