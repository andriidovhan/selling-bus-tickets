<!DOCTYPE html>
<html>
  <head>
    <title>SellingBusTickets</title>
    <%= stylesheet_link_tag 'primary', media: 'all' %>
  </head>
  <body>

    <div id="header">
      <h1>Selling Bus Tickets System</h1>
    </div>

    <div id="main">
      <% if !flash[:notice].blank? %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <div id="navigation">
      <%= render(:partial => 'layouts/navigation') unless @disable_navigation %>
      </div>

      <div id="content">
        <%= yield %>
      </div>
    </div>

    <div id="footer">
      <p id="copyright">&copy; andrii.test-task.com</p>
    </div>
  </body>
</html>
