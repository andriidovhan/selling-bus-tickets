<h1>Timetables</h1>

<table class="pretty">
  <thead>
  <tr>
    <th><%= sortable "place_depart", "Depart place" %></th>
    <th><%= sortable "time_depart", "Depart time" %></th>
    <th><%= sortable "place_arrive", "Arrive place" %></th>
    <th><%= sortable "time_arrive", "Arrive time" %></th>
    <th><%= sortable "amount_of_place", "Amount of place" %></th>
    <th><%= sortable "price", "Price" %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @timetables.each do |timetable| %>
      <tr>
        <td><%= timetable.place_depart %></td>
        <td><%= timetable.time_depart %></td>
        <td><%= timetable.place_arrive %></td>
        <td><%= timetable.time_arrive %></td>
        <td><%= timetable.amount_of_place %></td>
        <td><%= timetable.price %></td>
        <td><%= link_to 'Show', timetable %></td>
        <% if User.find(session[:user_id]).admin == true %>
          <td><%= link_to 'Edit', edit_timetable_path(timetable), :class => 'action edit' %></td>
          <td><%= link_to 'Destroy', delete_timetable_path(timetable), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<% if User.find(session[:user_id]).admin == true %>
  <%= link_to 'Add direction', new_timetable_path %>
<% end %>
